<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CropCalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/CropDarkGreen</item>
        <item name="colorPrimaryVariant">@color/CropGreen</item>
        <item name="colorOnPrimary">@color/CropWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/CropLightGreen</item>
        <item name="colorSecondaryVariant">@color/CropWhite</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/CropMaroon</item>
    </style>

    <style name="Theme.CalendarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.DeviceDefault.CalendarView">
        <!-- CalendarView -->
        <item name="android:focusedMonthDateColor">@color/CropMaroon</item>
        <item name="android:weekNumberColor">@color/CropMaroon</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.CalendarStyle</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.CalendarStyle</item>
    </style>
</resources>